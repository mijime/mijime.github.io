{
  "name": "mijime.github.io",
  "version": "1.0.0",
  "description": "mijime.github.io",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "test": "npm run lint:js && npm run lint:css && npm run lint:md",
    "similarity": "babel-node source/js/similarity",
    "build:js": "webpack",
    "build:css": "postcss source/css --dir static/css",
    "lint:js": "eslint source/js",
    "lint:css": "stylelint source/css",
    "lint:md": "textlint content",
    "format": "prettier --write *.js source/**/*.{js,css} content/**/*.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mijime/mijime.github.io.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mijime/mijime.github.io/issues"
  },
  "homepage": "https://github.com/mijime/mijime.github.io#readme",
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.5",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.10.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "kuromojin": "^2.0.0",
    "postcss-cli": "^8.0.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.1.2",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "textlint": "^11.7.6",
    "textlint-rule-preset-japanese": "^5.0.0",
    "textlint-rule-preset-jtf-style": "^2.3.6",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "browserslist": [
    "last 2 versions"
  ]
}
